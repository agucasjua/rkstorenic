    <h4 class="text-center bg-light p-2">FORMULARIO DE EDITAR USUARIO</h4>

    <% if (user) { %>
    <div class="container-form mt-4">
        <div class="card border-secondary p-4">
        <form action="/update" method="POST">

            <div class="form-body">
                <div class="cont-id">
                    <input id="id" name="id" value="<%= user.id %>" hidden>
                </div>

                <div class="name-lastname m-3">
                    <div class="input-group">
                        <span class="input-group-text">Nombres y Apellidos</span>
                        <input type="text" id="nombre" name="nombre" class="form-control" value="<%= user.nombreUser %>" required>
                        <input type="text" id="apellido" name="apellido" class="form-control" value="<%= user.apellidoUser %>" required>
                    </div>
                </div>

                <div class="username-clave m-3">
                    <div class="cont-user">
                        <label for="" class="form-label">Usuario: </label>
                        <input class="form-control" id="usuario" name="usuario" type="text" value="<%= user.usernameLog %>" aria-label="default input example">
                    </div>
                    <div class="cont-passw">
                        <label for="" class="form-label">Contrase√±a: </label>
                        <input class="form-control" id="clave" name="clave" type="text"  value="<%= user.passwordLog %>" aria-label="default input example">
                    </div>

                </div>
                
            </div>

            <div class="form-footer">
                <div class="cont-btn m-3 text-center">
                    <input id="btnSaveUser" type="submit" class="btn btn-success" value="Registrar Usuario">
                    <a href="/" id="btnCancelar" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>

        </form> 
    </div>           
    </div>
    <% } %>


    <!--SWEETALERT JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.28/dist/sweetalert2.all.min.js"></script>
    <!--Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
