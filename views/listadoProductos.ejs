<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/images/Identidad/Logo RK Store - Icono.ico" type="image/x-icon">
    <title>Listados</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <!-- SweetAlert CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.28/dist/sweetalert2.min.css">
        <!-- BoxIcons -->
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <!-- Local CSS -->
        <link type="text/css" rel="stylesheet" href="/css/listadoProducto.css">
</head>
<body>

  <div class="nav-back">
    <a href="/index" class="btn btn-warning"><i class='bx bxs-chevrons-left'></i>  Catalogo</a>
    <a href="/listadoUser" class="btn btn-primary"><i class='bx bxs-message-alt-add' ></i>Listado Usuarios</a>
    <a href="/AddProducto" class="btn btn-success"><i class='bx bxs-message-alt-add' ></i>Añadir Producto</a>
    
  </div>

  <h4 class="text-center bg-light p-2">Listado de Productos</h4>

  <div class="container-gene-list">
    <div class="container-listado">
        <table class="table table-light table-hover">
            <thead class="table-primary">
                <tr>
                  <th scope="col">Código</th>
                  <th scope="col">Imagen</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Categoria</th>
                  <th scope="col">Estado</th>
                  <th scope="col">Precio $</th>
                  <th scope="col">Precio C$</th>
                  <th scope="col" width="400px">Descripcion</th>
                  <th scope="col">Acciones</th>
                </tr>
              </thead>
              
              <tbody>
                <% results.forEach((productos)=> { %>
                <tr>
                  <th scope="row"><%= productos.CodigoProduc  %></th>
                  <td>
                    <img src="data:image/jpeg;base64,<%- productos.imagenProduc.toString('base64') %>" alt="<%= productos.NombreProduc %>" width="50px">
                  </td>
                  <td><%= productos.NombreProduc  %></td>
                  <td><%= productos.CategoriaProduc  %></td>
                  <td><%= productos.EstadoProduc  %></td>
                  <td class="precio-dolar" id="preciodolar"><%= productos.PrecioProduc  %></td>
                  <td class="precio-cordoba" id="precioCordoba">C$ </td>
                  <td width="50px"><%= productos.DetalleProduc  %> </td>
                  <td>
                    <a href="" class="btn btn-warning">
                      <i class='bx bxs-edit' ></i>
                    </a>
                  </td>
                </tr>
                <% }) %>                
              </tbody>
        </table>
    </div>
  </div>

    <!--SWEETALERT JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.28/dist/sweetalert2.all.min.js"></script>
    <!--Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!--JS LOCAL-->
    <script src="/js/listaProducto.js"></script>
  </body>
</html>